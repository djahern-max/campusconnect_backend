# Environment
ENVIRONMENT=development  # or 'production'
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/campusconnect_db

# Security (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Stripe (test keys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# DigitalOcean Spaces
DIGITAL_OCEAN_SPACES_ACCESS_KEY=your_access_key
DIGITAL_OCEAN_SPACES_SECRET_KEY=your_secret_key
DIGITAL_OCEAN_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DIGITAL_OCEAN_SPACES_BUCKET=magicscholar-images
DIGITAL_OCEAN_SPACES_REGION=nyc3
IMAGE_CDN_BASE_URL=https://magicscholar-images.nyc3.cdn.digitaloceanspaces.com

# Frontend
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO
